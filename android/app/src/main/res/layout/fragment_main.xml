<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Fragments.MainFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/communitiesGrid"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_grid_community"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/createCommunityButton"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/communitiesGrid"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="STWÓRZ"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/joinCommunityButton"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/communitiesGrid"
        app:layout_constraintEnd_toStartOf="@id/createCommunityButton"
        android:text="DOŁĄCZ"
        />

</androidx.constraintlayout.widget.ConstraintLayout>