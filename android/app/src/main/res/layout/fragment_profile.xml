<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Fragments.Settings.ProfileFragment">
    <ImageView
        android:contentDescription=""
        android:id="@+id/profilePicture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_launcher_foreground"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profileUsernameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintTop_toBottomOf="@id/profilePicture"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/profileUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        android:contentDescription=""
        android:id="@+id/descriptionIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15sp"
        android:src="@drawable/outline_emoji_people_24"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/profileUsernameLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profileAboutLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:layout_constraintTop_toBottomOf="@id/descriptionIcon">
        <com.google.android.material.textfield.TextInputEditText
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/profileAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLength="255"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/editProfileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/baseline_edit_24"
        android:layout_marginEnd="10dp"
        android:contentDescription=""
        android:layout_gravity="bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/colorPrimary"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/profileAboutLayout"
        android:gravity="center">
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/acceptEditButton"
            android:visibility="invisible"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="@string/accept"
            app:icon="@drawable/outline_assignment_turned_in_24"
            android:textColor="@color/light_green"
            android:contentDescription=""
            android:layout_gravity="bottom"
            android:backgroundTint="@color/colorPrimary"
            />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/cancelEditButton"
            android:visibility="invisible"
            android:layout_width="175dp"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            app:icon="@drawable/baseline_cancel_presentation_24"
            android:textColor="@color/red"
            android:contentDescription=""
            android:layout_gravity="bottom"
            android:backgroundTint="@color/colorPrimary"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>